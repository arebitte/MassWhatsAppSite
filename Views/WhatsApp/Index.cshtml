@model MassWhatsAppSite.Models.WhatsAppMessage

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>MassWhatsApp</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
        }

        .container {
            max-width: 800px;
            margin: 0 auto;
            padding: 20px;
            display: flex;
            flex-direction: column;
        }

        .section {
            padding: 20px;
            border: 1px solid #ccc;
            border-radius: 4px;
            margin-bottom: 10px;
        }

        .section h2 {
            font-size: 24px;
            text-align: center;
            margin-bottom: 10px;
        }

        .form-group {
            margin-bottom: 20px;
        }

        .form-group label {
            font-weight: bold;
        }

        .form-group input,
        .form-group textarea {
            width: 100%;
            padding: 10px;
            font-size: 16px;
            border: 1px solid #ccc;
            border-radius: 4px;
        }

        .form-group textarea {
            height: 120px;
            resize: vertical;
        }

        .btn-primary {
            background-color: #007bff;
            color: #fff;
            padding: 10px 20px;
            font-size: 16px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

        .btn-primary:hover {
            background-color: #0056b3;
        }

        .alert {
            padding: 10px;
            font-size: 16px;
            border-radius: 4px;
        }

        .alert-success {
            background-color: #dff0d8;
            color: #3c763d;
            margin-bottom: 10px;
        }

        .alert-danger {
            background-color: #f2dede;
            color: #a94442;
            margin-bottom: 10px;
        }

        .qrcode {
            text-align: center;
        }

        .qrcode img {
            max-width: 100%;
            height: auto;
        }
    </style>
</head>
<body>

    @* <div class="section">
        <h2>Ambiente @builder.Environment.EnvironmentName</h2>
    </div>                    *@


    <div class="container">
        @if (!string.IsNullOrEmpty(TempData["Success"] as string))
        {
            <div class="alert alert-success">
                @TempData["Success"]
            </div>
        }

        @if (!string.IsNullOrEmpty(TempData["Error"] as string))
        {
            <div class="alert alert-danger">
                @TempData["Error"]
            </div>
        }

        <input type="hidden" id="apiKeyHidden" name="apiKeyHidden" value="@ViewBag.APIKeyHidden">
        <table>
            <tr>
                <td>
                    <div class="section">
                        <h2>Passo 1 - Registrar o Telefone</h2>

                        <form asp-controller="WhatsApp" asp-action="RegisterPhoneNumber" method="get">
                            <div class="form-group">
                                <label for="phoneNumber">Phone Number</label>
                                <input class="form-control" type="text" id="phoneNumber" name="phoneNumber" required>
                            </div>
                            <div class="form-group">
                                <label for="apiKey">API Key (Nickname)</label>
                                <input class="form-control" type="text" id="apiKey" name="apiKey" required>
                                <p>Guarde essa informação, ela será importante para novos envios.</p>
                            </div>
                            <button type="submit" class="btn btn-primary">Register Phone</button>
                        </form>
                    </div>
                </td>
                <td>
                    <div class="section">
                        <h2>Passo 2 - Ler o QR Code</h2>

                        <div class="qrcode">
                            @if (!string.IsNullOrEmpty(TempData["QRCodeBase64"] as string))
                            {
                                <img src='data:image/png;base64,@TempData["QRCodeBase64"]' alt='QR Code'>

                            }
                            else
                            {
                                <p>No QR Code available</p>
                            }
                        </div>


                        <form asp-controller="WhatsApp" asp-action="ScanQR" method="get">
                            <button type="submit" class="btn btn-primary">Scan QR Code</button>
                        </form>
                    </div>

                </div>
                </td>
            </tr>
            <tr>
                <td colspan="2">
                    <div class="section">
                        <h2>Passo 3 - Eviar Mensagem</h2>

                        <form asp-controller="WhatsApp" asp-action="SendMessage" method="post">
                            <div class="form-group">
                                <label for="phoneNumbers">Phone Numbers</label>
                                <textarea class="form-control" id="phoneNumbers" name="PhoneNumbers"></textarea>
                                <small class="form-text text-muted">Enter one phone number per line.</small>
                            </div>
                            <div class="form-group">
                                <label for="message">Message</label>
                                <textarea class="form-control" id="message" name="Message"></textarea>
                            </div>
                            <button type="submit" class="btn btn-primary">Send Message</button>
                        </form>
                    </div>
                </td>
            </tr>
        </table>
    </div>

    <div class="section">
                        <h2>Reutilizar API KEY</h2>

                        <form asp-controller="WhatsApp" asp-action="EnterAPIKEY" method="get">
                            <div class="form-group">
                                <label for="apiKey">API Key (Nickname)</label>
                                <input class="form-control" type="text" id="apiKey" name="apiKey" required>
                    
                            </div>
                            <button type="submit" class="btn btn-primary">Registrar</button>
                        </form>
                    </div>

    <script>
        document.getElementById("apiKey").addEventListener("input", function() {
            document.getElementById("apiKeyHidden").value = this.value;
        });
    </script>
</body>
</html>
